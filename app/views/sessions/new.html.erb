<% provide(:title, "Log in") %>
<div class="container">
    <p>Not a member? <%= link_to 'Sign up here', signup_path %></p>
    <h1>Login</h1>
    <%= form_for(:session, url: login_path) do |f| %>
        <div class="input-field col s12">
            <%= f.email_field :email %>
            <%= f.label :email %>
        </div>
        <div class="input-field col s12">
            
            <%= f.password_field :password %>
            <%= f.label :password %>
        </div>
        <div class="input-field col s12">
            <%= f.check_box :remember %>
            <%= f.label :remember %>
        </div>
        <div class="input-field col s12">
            <%= f.submit 'Submit', class: 'waves-effect waves-light btn' %>
        </div>
    <% end %>
</div>
